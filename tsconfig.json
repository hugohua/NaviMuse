{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "rootDir": ".",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": "."
    },
    "include": [
        "src/**/*.ts",
        "scripts/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "client",
        "dist"
    ]
}